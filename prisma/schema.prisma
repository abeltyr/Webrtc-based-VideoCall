// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(cuid())
  ip         String       @unique
  name       String
  Room       Room[]
  isBlocked  Boolean      @default(false)
  RoomMember RoomMember[]
}

model Room {
  id         String       @id @default(cuid())
  ownerId    String
  owner      User?        @relation(fields: [ownerId], references: [id])
  name       String
  isActive   Boolean      @default(true)
  RoomMember RoomMember[]

  @@unique([ownerId, isActive])
}

model RoomMember {
  id          String        @id @default(cuid())
  memberId    String
  member      User?         @relation(fields: [memberId], references: [id])
  roomId      String
  room        Room?         @relation(fields: [roomId], references: [id])
  Description Description[]
  Candidate   Candidate[]
}

model Description {
  id           String      @id @default(cuid())
  roomMemberId String
  roomMember   RoomMember? @relation(fields: [roomMemberId], references: [id])
  type         String
  sdp          String
  dataType     typeStatus
}

model Candidate {
  id               String      @id @default(cuid())
  roomMemberId     String
  roomMember       RoomMember? @relation(fields: [roomMemberId], references: [id])
  candidate        String
  sdpMLineIndex    Int?
  sdpMid           String?
  usernameFragment String?
  dataType         typeStatus
}

enum typeStatus {
  Offer
  Answer
}
